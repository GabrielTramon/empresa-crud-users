{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src", 
    "outDir": "insomnia/dist",
    "paths": {
      "@modules/":["modules/"],
      "@shared/":["shared/"],
      "@config/":["config/"],
      "@errors/":["errors/"],
      "@utils/":["utils/"],
      "@erpModules/":["ERP/"]
    },
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  }
}